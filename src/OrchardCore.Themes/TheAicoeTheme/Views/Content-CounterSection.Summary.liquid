


	<!-- Start Blog Section -->
	<section class="blog-section pt-100 pb-70">
		<div class="container">
			<div class="section-title">
				<h2>Blog & Article</h2>
			</div>
			<div class="row">
            {% assign recentBlogPosts = Queries.NewsLP | query %}
            
            {% for item in recentBlogPosts %}
				<div class="col-lg-4 col-md-6">
					<div class="blog-single-item">
						<div class="blog-image">
							<a href="single-blog.html">
								 {{item.ContentItem.Content.NewsPost.Image.Paths.first | asset_url  | resize_url: width:450, height:300, mode:'crop' | img_tag  }}
							</a>
						</div>
						<div class="blog-description">
							<div class="blog-content">
                                {% a display_for:item.ContentItem %}
								<h3>
                                   
										{{ item | display_text }}
                                    
                                </h3>
                                {% enda %}
								<p>{{ item.ContentItem.Content.NewsPost.Subtitle.Text  }}</p>
								<div class="blog-btn">
									<a href="single-blog.html" class="btn-style-three-js blog-btn-one">{{ "詳細內容" |t }}  <span></span></a>
								</div>
							</div>
						</div>
					</div>
				</div>

            {% endfor %}
			</div>
		</div>
	</section>
	<!-- End Blog Section -->
	