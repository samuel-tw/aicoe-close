
<div class="col-lg-4 col-md-6">
    <div class="single-project-one">
        <div class="project-img-box">
            {% if Model.ContentItem.Content.OurProjectsItem.Image %}

            {{Model.ContentItem.Content.OurProjectsItem.Image.Paths.first | asset_url  | resize_url: width:300, height:200, mode:'crop' | img_tag  }}

            {% else %}
            <img src="assets/img/projects/project-one-2.jpg" alt="img">
            {% endif %}
        </div>
        <div class="project-lower-content">
            <p>{{Model.ContentItem.Content.OurProjectsItem.Subtitle.Text }}</p>
            <h3><a href="{{Model.ContentItem.Content.OurProjectsItem.SingleProjectLink.Url }}">{{Model.ContentItem.Content.OurProjectsItem.SingleProjectLink.Text}}</a></h3>
        </div>
    </div>
</div>
