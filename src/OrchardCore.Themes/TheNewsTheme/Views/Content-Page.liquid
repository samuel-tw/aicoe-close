{% zone "Header" %}
<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-title-content">
                    <h2>{{ Model.ContentItem.DisplayText }}</h2>
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>{{ Model.Content.HtmlBodyPart | shape_render }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endzone %}
<section class="single-terms  pt-30">
    <div class="container">
        <button type="button" class="btn btn-warning zoomin">{{"放大字體"|t}}</button>
        <button type="button" class="btn btn-warning zoomout">{{"縮小字體"|t}}</button>

        <hr />

    </div>
</section>
<div id = "example">
    {% shape_remove_item Model.Content "Page-Image1" %}
    {% shape_remove_item Model.Content "Page-Image2" %}
    {% shape_remove_item Model.Content "ListPart" %}
    {{ Model.Content | shape_render}}
</div>

{% scriptblock at: "Foot" %}


$('#example').FontSize({
increaseTimes: 10,
reduceTimes: 10
});
$('#example').FontSize({
step: 20
});
$('#example').FontSize({
increaseBtn: '.zoomin',
reduceBtn: '.zoomout'
});

{% endscriptblock %}
