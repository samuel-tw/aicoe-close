            {% assign categoryTerms = Model.ContentItem.Content.SingleProject.ProjectCategories | taxonomy_terms %}

            {% for categoryTerm in categoryTerms %}
<div class="col-lg-4 col-md-6">
	<div class="single-project-one">
		<div class="project-img-box">
			{% if  Model.ContentItem.Content.SingleProject.Tumbnail.Paths != null %}
			{{ Model.ContentItem.Content.SingleProject.Tumbnail.Paths.first | asset_url  | resize_url: width:300, height:200, mode:'crop' | img_tag }}
			{% else %}
			<img src="/TheNewsTheme/assets/img/projects/project-one-1.jpg" alt="img">
			{% endif %}
		</div>
		<div class="project-lower-content">
			<p>{{ categoryTerm.DisplayText }} </p>
			{% a display_for:Model.ContentItem %}
			<h3>{{Model.ContentItem.DisplayText}}</h3>
			{% enda %}
		</div>
	</div>
</div>



                {% endfor %}